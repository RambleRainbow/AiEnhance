# AiEnhance Docker环境配置示例
# 复制此文件为.env并根据需要修改配置

# =============================================================================
# 数据库配置
# =============================================================================
POSTGRES_DB=mirix_memory
POSTGRES_USER=mirix
POSTGRES_PASSWORD=mirix_password
DATABASE_URL=postgresql://mirix:mirix_password@postgres:5432/mirix_memory

# =============================================================================
# Redis配置
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# =============================================================================
# LLM提供商配置
# =============================================================================

# Ollama配置（使用本地服务）
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LLM_MODEL=qwen3:8b

# LLM性能参数
DEFAULT_LLM_TEMPERATURE=0.7
DEFAULT_LLM_MAX_TOKENS=800

# 嵌入模型配置
DEFAULT_EMBEDDING_PROVIDER=ollama
DEFAULT_EMBEDDING_MODEL=bge-m3

# OpenAI配置（可选）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic配置（可选）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# 服务配置
# =============================================================================

# MIRIX后端服务
MIRIX_API_URL=http://mirix-backend:8000

# MIRIX配置
MIRIX_AGENT_NAME=aienhance_unified
MIRIX_AUTO_SAVE_INTERACTIONS=true

# AiEnhance主应用
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=info

# =============================================================================
# 系统默认配置
# =============================================================================
DEFAULT_SYSTEM_TYPE=educational
DEFAULT_MEMORY_SYSTEM=mirix_unified
AIENHANCE_ENV=development

# Gradio界面配置
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# 会话管理
DEFAULT_SESSION_TIMEOUT=3600

# =============================================================================
# 功能开关
# =============================================================================
ENABLE_SCREEN_CAPTURE=false
ENABLE_AUDIO_CAPTURE=false
ENABLE_MEMORY_SYSTEM=true
ENABLE_STREAMING_OUTPUT=true
ENABLE_COLLABORATION_LAYER=true

# =============================================================================
# 管理界面配置（可选）
# =============================================================================
PGADMIN_DEFAULT_EMAIL=admin@aienhance.local
PGADMIN_DEFAULT_PASSWORD=admin

# =============================================================================
# 监控和调试
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
DEBUG_MODE=false