# AiEnhance Docker环境配置示例
# 复制此文件为.env并根据需要修改配置

# =============================================================================
# 数据库配置
# =============================================================================
# Neo4j配置 (for Graphiti)
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_passwd
NEO4J_URI=bolt://localhost:7687

# Redis配置移除，Graphiti使用Neo4j作为数据库

# =============================================================================
# LLM提供商配置
# =============================================================================

# Ollama配置（使用本地服务）
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_PROVIDER=ollama
DEFAULT_LLM_MODEL=qwen3:8b

# LLM性能参数
DEFAULT_LLM_TEMPERATURE=0.7
# DEFAULT_LLM_MAX_TOKENS=800  # 已移除限制，避免输出被截断

# 嵌入模型配置
DEFAULT_EMBEDDING_PROVIDER=ollama
DEFAULT_EMBEDDING_MODEL=bge-m3

# OpenAI配置（可选）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic配置（可选）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# 服务配置
# =============================================================================

# Graphiti API服务
GRAPHITI_API_URL=http://localhost:8000

# AiEnhance主应用
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=info

# =============================================================================
# 系统默认配置
# =============================================================================
DEFAULT_SYSTEM_TYPE=educational
DEFAULT_MEMORY_SYSTEM=graphiti_http
AIENHANCE_ENV=development

# Gradio界面配置
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# 会话管理
DEFAULT_SESSION_TIMEOUT=3600

# =============================================================================
# 功能开关
# =============================================================================
ENABLE_SCREEN_CAPTURE=false
ENABLE_AUDIO_CAPTURE=false
ENABLE_MEMORY_SYSTEM=true
ENABLE_STREAMING_OUTPUT=true
ENABLE_COLLABORATION_LAYER=true

# =============================================================================
# 管理界面配置（可选）
# =============================================================================
# PostgreSQL管理界面移除，使用Neo4j Browser访问图数据库

# =============================================================================
# 监控和调试
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
DEBUG_MODE=false

# =============================================================================
# 日志配置
# =============================================================================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志格式 (使用Python logging format)
# 默认: %(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s